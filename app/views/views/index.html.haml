  .modal-dialog
    .modal-content
      .modal-header
        %button{type: "button", class: "close", 'data-dismiss' => "modal", 'aria-hidden' => "true"} &times;
        %h4.modal-title Directions
      .modal-body{style: 'height: 500px'}
        %p
          %b
            Three Tomatoes Bar and Grill at Fossil Trace
          %br
          3050 Illinois St.
          %br
          Golden, CO 80401
        #fossil-trace-map{style: "width: 558px; height: 400px"}
      .modal-footer
        %button.btn.btn-default{type: "button", 'data-dismiss' => "modal"} Close

